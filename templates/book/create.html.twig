{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('book_create') }}" method="POST" enctype="multipart/form-data">
                <fieldset>
                    <legend>Add New Book</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book-name">Book Title</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="article_title" placeholder="Book Title"
                                   name="book[name]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_isbn">ISBN</label>
                        <div class="col-sm-4">
                        <input class="form-control" id="book_isbn"
                                  name="book[isbn]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_year">Year</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="book_year"
                                   name="book[year]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_cover">Cover image</label>
                        <div class="col-sm-4">
                            <input type="file" class="form-control" id="book_cover"
                                   name="book[coverImage]">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_description">Description</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="book_description"
                                  name="book[description]"></textarea>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('index') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}