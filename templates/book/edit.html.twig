{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('book_edit', {id: book.id}) }}" method="POST" enctype="multipart/form-data">
                <fieldset>
                    <legend>Edit Post</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_name">Title</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="book_name" placeholder="Name"
                                   name="book[name]" value="{{ book.name }}">
                            <small class="form-error">{{ form_errors(form.name) }}</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_isbn">ISBN</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="book_isbn"
                                   name="book[ISBN]" value="{{ book.ISBN }}">
                            <small class="form-error">{{ form_errors(form.ISBN) }}</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_year">Year</label>
                        <div class="col-sm-4">
                            <input class="form-control" id="book_year"
                                   name="book[year]" value="{{ book.year }}">
                            <small class="form-error">{{ form_errors(form.year) }}</small>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_coverImage">Cover image</label>
                        <div class="col-sm-4">
                            <input type="file" class="form-control" id="book_coverImage"
                                   name="coverImage" value="{{ book.coverImage.fileName }}">
                        </div>
                        {#  <small class="form-error">{{ form_errors(form.coverImage) }}</small>#}

                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="book_description">Description</label>
                        <div class="col-sm-6">
                        <textarea class="form-control" maxlength="2000" rows="6" id="book_description"
                                  name="book[description]">{{ book.description }}</textarea>
                            <small class="form-error">{{ form_errors(form.description) }}</small>
                        </div>
                    </div>

                    {{ form_row(form._token) }}

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('book_view', {id: book.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}

