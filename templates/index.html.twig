{% extends 'base.html.twig' %}

{% block main %}

    <div class="container">
        <div class="row">
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <div class="panel-heading">List of books</div>
                <div class="panel-body"></div>


                <table class="table">
                    <thead>
                    <th style="width: 10%">Cover</th>
                    <th style="width: 20%">Title</th>
                    <th style="width: 10%">ISBN</th>
                    <th style="width: 5%">Year</th>
                    <th style="width: 48%">Description</th>
                    <th style="width: 7%"></th>
                    </thead>

                    <tbody>
                    {% for book in books %}
                        <tr>
                            <td>{{ book.coverImage }}</td>
                            <td>{{ book.name }}</td>
                            <td>{{ book.ISBN }}</td>
                            <td>{{ book.year }}</td>
                            <td>{{ book.description }}</td>
                            <td>
                                {% if book.inPrivateCollection %}
                                    <a class="btn btn-danger"><span class="glyphicon glyphicon-remove"
                                                                    aria-hidden="true"></span></a>
                                {% else %}
                                    <a class="btn btn-primary"><span class="glyphicon glyphicon-plus-sign"
                                                                     aria-hidden="true"></span></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

